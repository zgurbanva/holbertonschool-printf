#include "main.h"
#include <unistd.h>

/**
 * _putchar - writes a single character to stdout
 * @c: character to print
 * Return: number of bytes written (1) or -1 on error
 */
int _putchar(char c)
{
	return (write(1, &c, 1));
}

/**
 * _puts - writes a (null-terminated) string to stdout
 * @str: pointer to string (prints "(null)" if str is NULL)
 * Return: number of bytes written
 */
int _puts(const char *str)
{
	int n = 0;

	if (!str)
		str = "(null)";

	while (*str)
	{
		_putchar(*str++);
		n++;
	}
	return (n);
}
